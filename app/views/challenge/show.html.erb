<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="clearfix">
        <div class="pull-right ">
          <a href="/logout">Logout</a>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">Purchase Information</div>
        <div class="panel-body">
          <form class="form-horizontal" role="form" action="/" method="post">
            <div class="form-group">
                
                <div class="col-lg-12">
                  <textarea name="challenge_data" id="challenge_data" class="form-control" rows="3"></textarea>
                </div>
              
            </div>
           
            <div class="form-group">
               <div class="col-lg-12">
           
                <button type="submit" class="btn btn-primary">Save</button>
                <br>
                <% if @submitted %>
                <div class="alert alert-success">
                  <strong>Thank You!</strong> You just submited a total revenue of: <%= number_to_currency(@total_revenue)%>
                </div>
              <% end %>
                
              </div>
             
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>